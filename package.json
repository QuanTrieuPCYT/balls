{
  "name": "balls-app",
  "version": "1.0.0",
  "private": true,
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} ./lib/seed.ts"
  },
  "scripts": {
    "prepare": "npm run build:schema && prisma db seed",
    "reset": "prisma db push --force-reset --schema=./lib/schema.prisma && prisma db seed",
    "dev": "nodemon server/server.ts",
    "build": "npm run build:server && npm run build:next",
    "build:next": "next build",
    "build:server": "cd server && tsc --build --verbose && cd .. && npm run build:asset",
    "build:asset": "copyfiles --flat \"server/views/*.ejs\" server/dist/server/views && copyfiles --flat \"app/favicon.ico\" server/dist/server && copyfiles --flat \"public/*\" server/dist/public",
    "build:schema": "prisma generate --schema=./lib/schema.prisma",
    "build:migrate": "prisma migrate dev --name balls --schema=./lib/schema.prisma",
    "start": "cross-env NODE_ENV=production node server/dist/server/server.js",
    "lint": "npm run lint:next && npm run lint:server",
    "lint:next": "next lint",
    "lint:server": "cd server && eslint ./**/*.ts"
  },
  "compilerOptions": {
    "module": "es20215",
    "target": "es20215",
    "sourceMap": true
  },
  "dependencies": {
    "@hookform/resolvers": "^3.4.2",
    "@prisma/client": "^5.14.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-table": "^8.17.3",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "http-errors": "^2.0.0",
    "http-proxy-middleware": "^3.0.0",
    "lucide-react": "^0.378.0",
    "next": "14.2.3",
    "next-auth": "^4.24.7",
    "next-themes": "^0.3.0",
    "node": "^18.20.3",
    "nodemon": "^3.1.0",
    "prisma": "^5.14.0",
    "react": "^18",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18",
    "react-hook-form": "^7.51.5",
    "react-toastify": "^10.0.5",
    "rimraf": "^5.0.7",
    "serve-favicon": "^2.5.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/serve-favicon": "^2.5.7",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}